import java.util.Scanner; // Import Scanner class to take user input

class TemperatureConversion { // Class definition
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in); // Creating Scanner object for user input
         
        // Prompting user to enter temperature in Celsius
        System.out.println("Enter temperature in Celsius:"); 
        double celsius = input.nextDouble(); // Reading user input as a double value
        
        // Converting Celsius to Fahrenheit using the formula: (C * 9/5) + 32
        double farenheitResult = (celsius * 9 / 5) + 32;
        
        // Displaying the conversion result
        System.out.println("The " + celsius + " Celsius is " + farenheitResult + " Fahrenheit");
        
        input.close(); // Closing the Scanner object to prevent resource leaks
    }
}
